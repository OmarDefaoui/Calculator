<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_black</item>
    </style>

    <style name="button_num">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@drawable/roundbutton</item>
    </style>

    <style name="button_num_0">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@drawable/roundbutton</item>
    </style>

    <style name="button_num_blanc">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:background">@drawable/bhaut</item>
    </style>

    <style name="button_num_orange">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:background">@drawable/orrange</item>
    </style>

</resources>
